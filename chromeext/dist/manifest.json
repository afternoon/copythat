{
  "manifest_version": 2,

  "name": "CopyThat",
  "description": "Request website copy changes from your tech team",
  "version": "0.1.0",

  "key": "",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",

  "icons": {
    "48": "icons/off48.png",
    "128": "icons/off128.png"
  },

  "background": {
    "scripts": [
      "firebase-2.1.1.js",
      "copythat.js"
    ],
    "persistent": false
  },

  "page_action": {
    "default_title": "Suggest copy changes",
    "default_icon": "icons/off38.png"
  }
}
